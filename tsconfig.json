{
	"compilerOptions": {
		"incremental": true,
		"outDir": "./dist",
		"moduleResolution": "Node",
		"module": "CommonJS",
		"target": "ES2018",
		"sourceMap": true,
		"lib": ["esnext"],
		"esModuleInterop": true,
		"alwaysStrict": true,
		"strictNullChecks": true,
		"noEmit": false,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"pretty": true,
		"resolveJsonModule": true,
		"forceConsistentCasingInFileNames": true,
		"types": ["@types/node"]
	},
	"exclude": ["**/node_modules", "dist"]
}
